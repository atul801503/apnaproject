<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h2>Edit your Listing</h2>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" onsubmit="this.classList.add('was-validated');">
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input id="title" name="title" value="<%= listing.title %>" type="text" class="form-control" required />
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Please enter a title</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input id="image" name="image[url]" value="<%= listing.image.url %>" type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid link</div>
            </div>

            <!-- Price -->
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input id="price" name="price" value="<%= listing.price %>" type="number" class="form-control" required />
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>

                <!-- Country -->
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input id="country" name="country" value="<%= listing.country %>" type="text" class="form-control" required />
                    <div class="invalid-feedback">Please enter the country</div>
                </div>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input id="location" name="location" value="<%= listing.location %>" type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter the location</div>
            </div>

            <button class="btn btn-danger mt-3">Edit</button>
        </form>
    </div>
</div>