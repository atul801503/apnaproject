<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h2>Edit your Listing</h2>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" 
              novalidate class="needs-validation" 
              onsubmit="this.classList.add('was-validated');">
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input id="title" name="listing[title]" value="<%= listing.title %>" 
                       type="text" class="form-control" required />
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Please enter a title</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="listing[description]" 
                          class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input id="image" name="listing[image][url]" value="<%= listing.image.url %>" 
                       type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid link</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input id="price" name="listing[price]" value="<%= listing.price %>" 
                           type="number" class="form-control" required />
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>
            </div>
<div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input id="location" name="listing[location]" value="<%= listing.location %>" 
                       type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid location</div>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input id="country" name="listing[country]" value="<%= listing.country %>" 
                       type="text" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid country</div>
            </div>

            
            <!-- Submit Button -->
            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Update Listing</button>
                <a href="/listings/<%= listing._id %>" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>